doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  link(rel='icon' href='assets/img/admico.ico' type='image/x-icon')
  title Logowanie Administratora - AkadeKlik
  link(rel='stylesheet' href='assets/css/app.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Josefin%20Sans')
  style.
    .loader {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #F5F8FA;
    z-index: 9998;
    text-align: center;
    }
    .plane-container {
    position: absolute;
    top: 50%;
    left: 50%;
    }
    h1.logo {
    font-family: "Josefin Sans", sans-serif;
    font-weight: bold;
    }
    .purple {
      background-color: #714eff !important;
    }
#loader.loader
  .plane-container
    .preloader-wrapper.small.active
      .spinner-layer.spinner-blue
        .circle-clipper.left
          .circle
        .gap-patch
          .circle
        .circle-clipper.right
          .circle
      .spinner-layer.spinner-red
        .circle-clipper.left
          .circle
        .gap-patch
          .circle
        .circle-clipper.right
          .circle
      .spinner-layer.spinner-yellow
        .circle-clipper.left
          .circle
        .gap-patch
          .circle
        .circle-clipper.right
          .circle
      .spinner-layer.spinner-green
        .circle-clipper.left
          .circle
        .gap-patch
          .circle
        .circle-clipper.right
          .circle
#app
  main
    #primary.p-t-b-50.height-full
      .container
        .row
          .col-lg-4.mx-md-auto
            .text-center
              img(src='assets/img/logo.png' alt='' class="w-50 p-4")
              h1.logo AkadeKlik
              h3.mt-4.mb-4 Logowanie Administratora
            form(action='auth' method='post' autocomplete='off')
              .form-group.has-icon
                i.icon-user
                input.form-control.form-control-lg(type='text' name='username' placeholder='Podaj login' required='')
              .form-group.has-icon
                i.icon-lock
                input.form-control.form-control-lg(type='password' name='password' placeholder='Podaj hasło' required='')
              input.btn.btn-primary.purple.btn-lg.btn-block(type='submit' value='Zaloguj się')
              .text-center
                .col.mt-4
                a(href='/') Powrót
  script(src='assets/js/app.js')