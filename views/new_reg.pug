#app
  main
    #primary.p-t-b-50.height-full
      .container
        .row
          .col-lg-4.mx-md-auto
            .text-center
              img(src='assets/img/logoStd.png' alt='' class="w-50 p-3")
              h1.logo AkadeKlik
              h3.mt-4.mb-4 Rejestracja nowego konta
            form(action='/new_reg' method='post' autocomplete='off')
              .form-group.has-icon
                i.icon-envelope
                input.form-control.form-control-lg(type='email' name='email' placeholder='Podaj adres email' required='')
              .form-group.has-icon
                i.icon-lock
                input.form-control.form-control-lg(type='password' name='password' placeholder='Podaj hasło' required='')
              input.btn.btn-primary.orange.btn-lg.btn-block.text-dark.mb-2(type='submit' onclick="info()" value='Utwórz konto')
            .text-center
              .col.mt-4
              a(href='/student_login') Powrót
